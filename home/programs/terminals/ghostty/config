# Load theme configuration
config-file = ghostty-theme

# GLSL shader for visual effects (bloom025 = subtle glow effect)
custom-shader = shaders/bloom025.glsl

# Disable shader animation loop to reduce CPU usage
custom-shader-animation = false

# Launch tmux-sessionizer on startup, fallback to tmux attach/new, then zsh
command = zsh --login -c "if command -v tmux-sessionizer >/dev/null 2>&1; then tmux-sessionizer $HOME || (tmux attach 2>/dev/null || tmux); else exec zsh; fi"

# Horizontal padding: left=4pt, right=2pt
window-padding-x = 4,2

# Vertical padding: top=6pt, bottom=0pt
window-padding-y = 6,0

font-family = "JetBrainsMono Nerd Font"
font-size = 15

# Hide titlebar while keeping native borders and rounded corners
macos-titlebar-style = hidden

# Disable close confirmation prompts
confirm-close-surface = false

# Right Option key behaves as Alt for terminal sequences
macos-option-as-alt = right

# Quick terminal slide animation duration (0 = disabled)
quick-terminal-animation-duration = 0.08

# ===== Keybindings =====

# System controls
keybind = super+i=inspector:toggle
keybind = super+r=reload_config

# Tab management (super+t conflicts avoided, using super+shift)
keybind = super+shift+t=new_tab
keybind = super+shift+w=close_surface
keybind = super+shift+[=previous_tab
keybind = super+shift+]=next_tab
keybind = super+1=goto_tab:1
keybind = super+2=goto_tab:2
keybind = super+3=goto_tab:3
keybind = super+4=goto_tab:4
keybind = super+5=goto_tab:5
keybind = super+6=goto_tab:6
keybind = super+7=goto_tab:7
keybind = super+8=goto_tab:8
keybind = super+9=goto_tab:9

# Split management (avoid super+h/j/k/l which might be used in nvim terminal mode)
keybind = super+shift+d=new_split:right
keybind = super+alt+down=new_split:down
keybind = super+alt+left=goto_split:left
keybind = super+alt+right=goto_split:right
keybind = super+alt+up=goto_split:top
keybind = super+alt+down=goto_split:bottom
keybind = super+shift+x=close_surface

# Split resizing
keybind = super+ctrl+left=resize_split:left,10
keybind = super+ctrl+right=resize_split:right,10
keybind = super+ctrl+up=resize_split:up,10
keybind = super+ctrl+down=resize_split:down,10
keybind = super+shift+equal=equalize_splits

# Window management
keybind = super+n=new_window

# App icon style (official, blueprint, chalkboard, microchip, glass, holographic, paper, retro, xray)
macos-icon = official

# Frosted glass effect: semi-transparent background with blur (requires restart on macOS)
background-opacity = 0.85
background-blur-radius = 64

# Dim unfocused splits for visual focus clarity
unfocused-split-opacity = 0.7
